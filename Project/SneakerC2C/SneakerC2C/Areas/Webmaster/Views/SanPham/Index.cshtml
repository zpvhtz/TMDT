<script>
    $(".Size").click(function(){
        let masp = $(this).closest('tr').find('.ma').text();
        $.ajax({
            url: "/Webmaster/SanPham/GetSizeSanPham",
            type: "get",
            data: { "masp": masp },
            success: function (data) {
                $("#modal-body-size").html(data);
            },
            error: function (data) {
                alert("Error: " + data);
            }
        });
    });
</script>
