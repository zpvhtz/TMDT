@model IEnumerable<Models.Database.TaiKhoan>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">DANH SÁCH TÀI KHOẢN</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <!-- Search form -->
        <div class="row">
            <div class="col-lg-1">
                <button class="btn btn-primary" data-toggle="modal" data-target="#themModal">Thêm</button>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <select class="form-control" id="sortList" onchange="window.location.href = SearchAndSort()">
                        <option selected disabled>Sắp xếp theo</option>
                        <option value="/Webmaster/TaiKhoan/Sort?sortorder=tendangnhap-az">Tên đăng nhập (A-Z)</option>
                        <option value="/Webmaster/TaiKhoan/Sort?sortorder=tendangnhap-za">Tên đăng nhập (Z-A)</option>
                        <option value="/Webmaster/TaiKhoan/Sort?sortorder=ten-az">Tên (A-Z)</option>
                        <option value="/Webmaster/TaiKhoan/Sort?sortorder=ten-za">Tên (Z-A)</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-6"></div>
            <div class="col-lg-3">
                <form asp-controller="TaiKhoan" asp-action="Search" method="get">
                    <div class="input-group custom-search-form">
                        <input type="text" class="form-control" id="searchList" placeholder="Tìm kiếm..." name="search">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>

                    </div>
                </form>
            </div>
        </div>
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead class="thead-dark">
                <tr>
                    <th>Tên đăng nhập</th>
                    <th>Họ tên</th>
                    <th>Tên shop</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>CMND</th>
                    <th>Loại người dùng</th>
                    <th>Ngày tạo</th>
                    <th>Đánh giá</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="body-content">
                @foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td class="item-tendangnhap">@item.TenDangNhap</td>
                        <td class="item-ten">@item.Ten</td>
                        <td class="item-tenshop">@item.TenShop</td>
                        <td class="item-email">@item.Email</td>
                        <td class="item-dienthoai">@item.DienThoai</td>
                        <td class="item-cmnd">@item.Cmnd</td>
                        <td class="item-loainguoidung">@item.IdLoaiNguoiDungNavigation.TenLoaiNguoiDung</td>
                        <td class="item-ngaytao">@item.NgayTao</td>
                        <td class="item-danhgia">@item.DanhGia</td>
                        <td>
                            @if (item.TinhTrang == "Không khoá")
                            {
                                <button class="btn btn-primary btnChiTiet" type="button" data-toggle="modal" data-target="#chitietModal">Chi tiết</button>
                                @*<button class="btn btn-primary btnDiaChi" type="button" data-toggle="modal" data-target="#diachiModal">Địa chỉ</button>*@
                                <button class="btn btn-primary btnSuaTaiKhoan" type="button" data-toggle="modal" data-target="#suaModal">Sửa</button>
                                <a asp-controller="TaiKhoan" asp-action="LockTaiKhoan" asp-route-tendangnhap="@item.TenDangNhap" class="btn btn-danger">Khoá</a>
                            }
                            else
                            {
                                <button class="btn btn-primary btnChiTiet" type="button" data-toggle="modal" data-target="#chitietModal">Chi tiết</button>
                                @*<button class="btn btn-primary btnDiaChi" type="button" data-toggle="modal" data-target="#diachiModal">Địa chỉ</button>*@
                                <button class="btn btn-primary btnSuaTaiKhoan" type="button" data-toggle="modal" data-target="#suaModal" disabled>Sửa</button>
                                <a asp-controller="TaiKhoan" asp-action="UnlockTaiKhoan" asp-route-tendangnhap="@item.TenDangNhap" class="btn btn-danger">Mở khoá</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- /.table-responsive -->
        <ul class="pagination" style="margin: 0 auto;">
            @if (ViewBag.TrangHienTai == 1)
            {
                <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous"><a href="#">Trước</a></li>
            }
            else
            {
                <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                    @switch (ViewBag.TrangThai)
                    {
                        case "index":
                            <a asp-controller="TaiKhoan" asp-action="Index" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                        case "sort":
                            <a asp-controller="TaiKhoan" asp-action="Sort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                        case "search":
                            <a asp-controller="TaiKhoan" asp-action="Search" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                        case "searchandsort":
                            <a asp-controller="TaiKhoan" asp-action="SearchAndSort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                    }
                </li>
            }
            @for (int i = 1; i <= ViewBag.TongTrang; i++)
            {
                if (i > 5)
                {
                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">...</a></li>
                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                        @switch (ViewBag.TrangThai)
                        {
                            case "index":
                                <a asp-controller="TaiKhoan" asp-action="Index" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                            case "sort":
                                <a asp-controller="TaiKhoan" asp-action="Sort" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                            case "search":
                                <a asp-controller="TaiKhoan" asp-action="Search" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                            case "searchandsort":
                                <a asp-controller="TaiKhoan" asp-action="SearchAndSort" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                        }
                    </li>
                    break;
                }
                else
                {
                    if (i == ViewBag.TrangHienTai)
                    {
                        <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                            @switch (ViewBag.TrangThai)
                            {
                                case "index":
                                    <a asp-controller="TaiKhoan" asp-action="Index" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                                case "sort":
                                    <a asp-controller="TaiKhoan" asp-action="Sort" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                                case "search":
                                    <a asp-controller="TaiKhoan" asp-action="Search" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                                case "searchandsort":
                                    <a asp-controller="TaiKhoan" asp-action="SearchAndSort" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                            }
                        </li>
                    }
                }
            }
            @if (ViewBag.TrangHienTai == ViewBag.TongTrang)
            {
                <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#">Tiếp</a></li>
            }
            else
            {
                <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                    @switch (ViewBag.TrangThai)
                    {
                        case "index":
                            <a asp-controller="TaiKhoan" asp-action="Index" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                        case "sort":
                            <a asp-controller="TaiKhoan" asp-action="Sort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                        case "search":
                            <a asp-controller="TaiKhoan" asp-action="Search" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                        case "searchandsort":
                            <a asp-controller="TaiKhoan" asp-action="SearchAndSort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                    }
                </li>
            }
        </ul>
    </div>
</div>
