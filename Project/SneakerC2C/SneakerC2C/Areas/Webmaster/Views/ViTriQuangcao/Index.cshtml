@model IEnumerable<Models.Database.ViTriQuangcao>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">DANH SÁCH VỊ TRÍ QUẢNG CÁO</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <!-- Search form -->
        <div class="row">
            <div class="col-lg-1">
                <button class="btn btn-primary" data-toggle="modal" data-target="#themModal">Thêm</button>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <select class="form-control" id="sortList" onchange="window.location.href = SearchAndSort()">
                        <option selected disabled>Sắp xếp theo</option>
                        <option value="/Webmaster/ViTriQuangcao/Sort?sortorder=tenvitri-az">Tên vitri (A-Z)</option>
                        <option value="/Webmaster/ViTriQuangcao/Sort?sortorder=tenvitri-za">Tên vitri (Z-A)</option>
                        <option value="/Webmaster/ViTriQuangcao/Sort?sortorder=gia-asc">Giá thấp</option>
                        <option value="/Webmaster/ViTriQuangcao/Sort?sortorder=gia-desc">Giá cao</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-6"></div>
            <div class="col-lg-3">
                <form asp-controller="ViTriQuangcao" asp-action="Search" method="get">
                    <div class="input-group custom-search-form">
                        <input type="text" class="form-control" id="searchList" placeholder="Tìm kiếm..." name="search">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>

                    </div>
                </form>
            </div>
        </div>
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead class="thead-dark">
                <tr>
                    <th>Mã</th>
                    <th>Tên</th>
                    <th>Trang</th>
                    <th>Đơn Giá</th>
                    <th>Chú Thích</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="body-content">
                @foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td class="item-ma">@item.MaViTri</td>
                        <td class="item-ten">@item.TenViTri</td>
                        <td class="item-trangquangcao">@item.IdTrangNavigation.TenTrang</td>
                        <td class="item-dongia">@item.DonGia</td>
                        <td class="item-chuthich">@item.ChuThich</td>
                        <td>
                            @if (item.TinhTrang == "Không khoá")
                            {
                                <button class="btn btn-primary btnSuaTrang" type="button" data-toggle="modal" data-target="#suaModal">Sửa</button>
                                <a asp-controller="ViTriQuangcao" asp-action="LockViTriQuangcao" asp-route-mavitri="@item.MaViTri" class="btn btn-danger">Khoá</a>
                            }
                            else
                            {
                                <button class="btn btn-primary btnSuaTrang" type="button" data-toggle="modal" data-target="#suaModal" disabled>Sửa</button>
                                <a asp-controller="ViTriQuangcao" asp-action="UnlockViTriQuangcao" asp-route-mavitri="@item.MaViTri" class="btn btn-danger">Mở khoá</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- /.table-responsive -->
        <ul class="pagination" style="margin: 0 auto;">
            @if (ViewBag.TrangHienTai == 1)
            {
                <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous"><a href="#">Trước</a></li>
            }
            else
            {
                <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                    @switch (ViewBag.TrangThai)
                    {
                        case "index":
                            <a asp-controller="ViTriQuangcao" asp-action="Index" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                        case "sort":
                            <a asp-controller="ViTriQuangcao" asp-action="Sort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                        case "search":
                            <a asp-controller="ViTriQuangcao" asp-action="Search" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                        case "searchandsort":
                            <a asp-controller="ViTriQuangcao" asp-action="SearchAndSort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai - 1)" class="pageNumber">Trước</a>
                            break;
                    }
                </li>
            }
            @for (int i = 1; i <= ViewBag.TongTrang; i++)
            {
                if (i > 5)
                {
                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">...</a></li>
                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                        @switch (ViewBag.TrangThai)
                        {
                            case "index":
                                <a asp-controller="ViTriQuangcao" asp-action="Index" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                            case "sort":
                                <a asp-controller="ViTriQuangcao" asp-action="Sort" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                            case "search":
                                <a asp-controller="ViTriQuangcao" asp-action="Search" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                            case "searchandsort":
                                <a asp-controller="ViTriQuangcao" asp-action="SearchAndSort" asp-route-pagenumber="@Html.Raw(ViewBag.TongTrang)" class="pageNumber">@ViewBag.TongTrang</a>
                                break;
                        }
                    </li>
                    break;
                }
                else
                {
                    if (i == ViewBag.TrangHienTai)
                    {
                        <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li class="paginate_button" aria-controls="dataTables-example" tabindex="0">
                            @switch (ViewBag.TrangThai)
                            {
                                case "index":
                                    <a asp-controller="ViTriQuangcao" asp-action="Index" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                                case "sort":
                                    <a asp-controller="ViTriQuangcao" asp-action="Sort" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                                case "search":
                                    <a asp-controller="ViTriQuangcao" asp-action="Search" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                                case "searchandsort":
                                    <a asp-controller="ViTriQuangcao" asp-action="SearchAndSort" asp-route-pagenumber="@i" class="pageNumber">@i</a>
                                    break;
                            }
                        </li>
                    }
                }
            }
            @if (ViewBag.TrangHienTai == ViewBag.TongTrang)
            {
                <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#">Tiếp</a></li>
            }
            else
            {
                <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                    @switch (ViewBag.TrangThai)
                    {
                        case "index":
                            <a asp-controller="ViTriQuangcao" asp-action="Index" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                        case "sort":
                            <a asp-controller="ViTriQuangcao" asp-action="Sort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                        case "search":
                            <a asp-controller="ViTriQuangcao" asp-action="Search" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                        case "searchandsort":
                            <a asp-controller="ViTriQuangcao" asp-action="SearchAndSort" asp-route-pagenumber="@Html.Raw(ViewBag.TrangHienTai + 1)" class="pageNumber">Tiếp</a>
                            break;
                    }
                </li>
            }
        </ul>
    </div>
</div>
<!-- /.panel-body -->
<!-- Modal thêm -->
<div class="modal fade" id="themModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <form asp-controller="ViTriQuangcao" asp-action="CreateViTriQuangcao" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Vị Trí Quảng Cáo</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Mã</label>
                        <input type="text" class="form-control" id="item-them-ma" name="item_them_ma" required>
                    </div>
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control" id="item-them-ten" name="item_them_ten" required>
                    </div>
                    <div class="form-group">
                        <label>Trang</label>
                        <select class="form-control" id="item-them-trangquangcao" name="item_them_trangquangcao">
                            @foreach (var item in ViewBag.TrangQuangCao)
                            {
                                <option value="@item.Id">@item.TenTrang</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Đơn Giá</label>
                        <input type="number" class="form-control" id="item-them-dongia" name="item_them_dongia" min="0" required>
                    </div>
                    <div class="form-group">
                        <label>Chú Thích</label>
                        <input type="text" class="form-control" id="item-them-chuthich" name="item_them_chuthich">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-warning" id="btnThemTrang">Thêm</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal sửa -->
<div class="modal fade" id="suaModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <form asp-controller="ViTriQuangcao" asp-action="EditViTriQuangcao" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
