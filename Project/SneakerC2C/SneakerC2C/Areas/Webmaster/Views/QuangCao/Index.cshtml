        <script>
    function SearchAndSort() {
        let search = "@ViewBag.Search";
        if (search == null || search == '') {
            return $("#sortList").val();
        }
        else {
            let href = $("#sortList").val();
            href = href.replace("Sort", "SearchAndSort");
            href = href + (`&search=${search}`)
            return href;
        }
        $("#item-them-thoiluong").keydown(validateNumber);
        $("#item-sua-thoiluong").keydown(validateNumber);
    }

    function validateNumber(e) {
        // Allow: backspace, delete, tab, escape, enter and .
        if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
            // Allow: Ctrl/cmd+A
            (e.keyCode == 65 && (e.ctrlKey === true || e.metaKey === true)) ||
            // Allow: Ctrl/cmd+C
            (e.keyCode == 67 && (e.ctrlKey === true || e.metaKey === true)) ||
            // Allow: Ctrl/cmd+X
            (e.keyCode == 88 && (e.ctrlKey === true || e.metaKey === true)) ||
            // Allow: home, end, left, right
            (e.keyCode >= 35 && e.keyCode <= 39)) {
            // let it happen, don't do anything
            return;
        }
        // Ensure that it is a number and stop the keypress
        if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
            e.preventDefault();
        }
    };
        </script>

        <script>
    $(document).ready(function () {
        //Sắp xếp
        let sort = "@ViewBag.Sort";
        if (sort != '') {
            $("#sortList option").each(function () {
                if ($(this).val().includes(sort)) {
                    $(this).attr('selected', 'selected');
                    return;
                }
            });
        }
    });

    $(".btnSuaGoi").click(function () {
        let ma = $(this).closest('tr').find('.item-ma').text();
        let vitriquangcao = $(this).closest('tr').find('.item-vitriquangcao').text();
        let thoiluong = $(this).closest('tr').find('.item-thoiluong').text();
        let tongtien = $(this).closest('tr').find('.item-tongtien').text();


        $("#item-sua-ma").val(ma.trim());
        $("#item-sua-vitriquangcao").val(vitriquangcao.trim());
        $("#item-sua-thoiluong").val(thoiluong.trim());
        $("#item-sua-tongtien").val(tongtien.trim());

    });

    $(".pageNumber").click(function () {
        //Get addtional href
        let sort = $("#sortList").val();
        let search = "@ViewBag.Search";
        //Href
        var $link = $('.pageNumber');
        var href = $link.attr('href').split('/');
        if (sort != null && sort != '') {
            sort = sort.substring(sort.lastIndexOf('=') + 1, sort.length);
            href.push('&sortorder=' + sort); //here you set your new asp-route-pagenumber value
        }
        if (search != null && search != '') {
            href.push('&search=' + search); //here you set your new asp-route-pagenumber value
        }
        href = href.join('/');
        href = href.toString().replace(/\/&/g, '&');
        $link.attr('href', href);
    });

    function GetDonGiaThem(id,thoiluong) {
        $.ajax({
            url: "/Webmaster/QuangCao/GetDonGia",
            type: "get",
            data: { "id": id },
            success: function (data) {
                let tongtien = data*thoiluong;
                $("#item-them-tongtien").val(tongtien);
            },
            error: function (data) {
                alert("Error: " + data);
            }
        });
            }
            function availabledates(nam, thang, goi) {
                $.ajax({
                    url: "/Webmaster/QuangCao/GetDates",
                    type: "post",
                    data: { "nam": nam, "thang":thang, "goi":goi },
                    success: function (data) {
                        var select = document.getElementById("item-them-ngay");
                        for (var i in data) {
                            var option = document.createElement("option");
                            option.text = data[i].day;
                            select.add(option);
                        }
                        
                    },
                    error: function (data) {
                        alert("Error: " + data);
                    }
                });
            }
            function minthang() {
                
                var nam = document.getElementById('item-them-nam').value;
                
                var goi = document.getElementById('item-them-goiquangcao').value;
                
                if (nam ==@DateTime.Now.Year) {
                    document.getElementById('item-them-thang').min =@DateTime.Now.Month;
                    document.getElementById('item-them-thang').value =@DateTime.Now.Month;
                }
                else {
                    document.getElementById('item-them-thang').min =1;
                    document.getElementById('item-them-thang').value =1;
                }
                var thang = document.getElementById('item-them-thang').value;
                
                availabledates(nam, thang, goi);
               
            
    }
        </script>
