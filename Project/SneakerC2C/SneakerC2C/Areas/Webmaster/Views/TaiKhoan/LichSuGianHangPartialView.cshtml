@model IEnumerable<Models.Database.LichSuGianHang>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="form-group">
    <label>Tên đăng nhập</label>
    <input type="text" class="form-control" id="diachi-tendangnhap" name="tendangnhap" value="@ViewBag.TenDangNhap" readonly>
</div>

<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <tbody class="body-content">
        <tr>
            <th>Mã gian hàng</th>
            <th>Tên gian hàng</th>
            <th>Ngày đăng ký</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="odd gradeX">
                <td class="item-magianhang">@item.IdGianHangNavigation.MaGianHang</td>
                <td class="item-tengianghang">@item.IdGianHangNavigation.TenGianHang</td>
                <td class="item-ngaydangky">@item.NgayDangKy</td>
            </tr>
        }
    </tbody>
</table>

