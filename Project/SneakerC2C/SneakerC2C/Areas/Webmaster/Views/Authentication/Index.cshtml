@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Đăng nhập</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/admintemplate/pages/../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/admintemplate/pages/../vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/admintemplate/pages/../dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/admintemplate/pages/../vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">ĐĂNG NHẬP</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-area="Webmaster" asp-controller="Authentication" asp-action="LogIn" method="post">
                            <fieldset>
                                @if (Context.Request.Cookies["tendangnhap"] != null && Context.Request.Cookies["matkhau"] != null)
                                {
                                    <div class="form-group">
                                        <input id="txtTenDangNhap" class="form-control" placeholder="Tên đăng nhập" name="tendangnhap" type="text" value="@Context.Request.Cookies["tendangnhap"]" pattern=".{8,}" required oninvalid="this.setCustomValidity('Tên đăng nhập chứa ít nhất 8 ký tự'')" onchange="this.setCustomValidity('')">
                                    </div>
                                    <div class="form-group">
                                        <input id="txtMatKhau" class="form-control" placeholder="Mật khẩu" name="matkhau" type="password" value="@Context.Request.Cookies["matkhau"]" pattern=".{8,}" required oninvalid="this.setCustomValidity('Mật khẩu chứa ít nhất 8 ký tự'')" onchange="this.setCustomValidity('')">
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="remember" checked>Ghi nhớ đăng nhập
                                        </label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <input id="txtTenDangNhap" class="form-control" placeholder="Tên đăng nhập" name="tendangnhap" type="text" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <input id="txtMatKhau" class="form-control" placeholder="Mật khẩu" name="matkhau" type="password" value="">
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="remember">Ghi nhớ đăng nhập
                                        </label>
                                    </div>
                                }
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-success btn-block" type="submit">Đăng nhập</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/admintemplate/pages/../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/admintemplate/pages/../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/admintemplate/pages/../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/admintemplate/pages/../dist/js/sb-admin-2.js"></script>

</body>

</html>

@if (ViewBag.ThongBao != null)
{
    <script>
        alert("@Html.Raw(ViewBag.ThongBao)");
    </script>
}