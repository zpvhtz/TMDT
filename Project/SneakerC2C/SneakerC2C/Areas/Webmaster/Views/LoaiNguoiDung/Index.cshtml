@model PagedList.IPagedList<Models.Database.LoaiNguoiDung>
@using PagedList.Mvc;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh Sách Loại Người Dùng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="col-lg-12">
    <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <!--------------------------------------------- Search And Add ------------------------------------------------->
                    <div class="form-group">
                       @using (Html.BeginForm("Index", "LoaiNguoiDung", FormMethod.Get))
                        {
                            <label>Nhập Tên Loại:</label>
                            <input type="text" , name="searchString">
                            <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
                        }
                        <a href="/Webmaster/LoaiNguoiDung"><button type="submit" class="btn btn-primary">Làm Mới</button></a>
                        <a href="/Webmaster/LoaiNguoiDung/Create"><button type="button" class="btn btn-warning">Thêm Mới</button></a>
                    </div>
                    <!------------------------------------------- Loading Edit Delete ----------------------------------------------->
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Mã Loại người Dùng</th>
                            <th>Tên Loại người Dùng</th>
                            <th>Tình Trạng</th>
                            <th>Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr id="row_@item">
                            <td> @item.Id</td>
                            <td> @item.MaLoaiNguoiDung</td>
                            <td> @item.TenLoaiNguoiDung</td>
                            <td> @item.TinhTrang</td>
                            <td>
                                <a href="/Webmaster/LoaiNguoiDung/Edit/@item.MaLoaiNguoiDung"><button type="button" class="btn btn-primary">Sửa</button></a>
                                <button type="button" class="btn btn-warning"> Khoá


                                </button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>                                                                                            
                @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>