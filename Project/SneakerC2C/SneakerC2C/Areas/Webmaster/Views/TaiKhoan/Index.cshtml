@model IEnumerable<Models.Database.TaiKhoan>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel-body">
    <!-- Search form -->
    <div class="row">
        <div class="col-lg-1">
            <button class="btn btn-primary">Thêm</button>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <select class="form-control" id="sortList">
                    <option selected disabled>Sắp xếp theo</option>
                    <option value="tendangnhap-az">Tên đăng nhập (A-Z)</option>
                    <option value="tendangnhap-za">Tên đăng nhập (Z-A)</option>
                    <option value="ten-az">Tên (A-Z)</option>
                    <option value="ten-za">Tên (Z-A)</option>
                </select>
            </div>
        </div>
        <div class="col-lg-6"></div>
        <div class="col-lg-3">
            <div class="input-group custom-search-form">
                <input type="text" class="form-control" id="searchList" placeholder="Search...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <br />
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead class="thead-dark">
            <tr>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>CMND</th>
                <th>Loại người dùng</th>
                <th>Ngày tạo</th>
                <th>Đánh giá</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="body-content">
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">
                    <td class="item-tendangnhap">@item.TenDangNhap</td>
                    <td class="item-ten">@item.Ten</td>
                    <td class="item-email">@item.Email</td>
                    <td class="item-dienthoai">@item.DienThoai</td>
                    <td class="item-cmnd">@item.Cmnd</td>
                    <td class="item-loainguoidung">@item.IdLoaiNguoiDungNavigation.TenLoaiNguoiDung</td>
                    <td class="item-ngaytao">@item.NgayTao</td>
                    <td class="item-danhgia">@item.DanhGia</td>
                    <td>
                        @if (item.TinhTrang == "Không khoá")
                        {
                            <button class="btn btn-warning" type="button" data-toggle="modal" data-target="#suaModal" id="btnSuaTaiKhoan">Sửa</button>
                            <a asp-controller="TaiKhoan" asp-action="LockTaiKhoan" asp-route-tendangnhap="@item.TenDangNhap" class="btn btn-danger">Khoá</a>
                        }
                        else
                        {
                            <button class="btn btn-warning" type="button" data-toggle="modal" data-target="#suaModal" id="btnSuaTaiKhoan" disabled>Sửa</button>
                            <a asp-controller="TaiKhoan" asp-action="UnlockTaiKhoan" asp-route-tendangnhap="@item.TenDangNhap" class="btn btn-danger">Mở khoá</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- /.table-responsive -->
    <ul class="pagination">
        @if (ViewBag.TrangHienTai == 1)
        {
            <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous"><a href="#" class="pageNumber">Trước</a></li>
        }
        else
        {
            <li class="paginate_button previous" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous"><a href="#" class="pageNumber">Trước</a></li>
        }
        @for (int i = 1; i <= ViewBag.TongTrang; i++)
        {
            if (i > 5)
            {
                <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">...</a></li>
                <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#" class="pageNumber">@ViewBag.TongTrang</a></li>
                break;
            }
            else
            {
                if (i == ViewBag.TrangHienTai)
                {
                    <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0"><a href="#" class="pageNumber">@i</a></li>
                }
                else
                {
                    <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#" class="pageNumber">@i</a></li>
                }
            }
        }
        @if (ViewBag.TrangHienTai == ViewBag.TongTrang)
        {
            <li class="paginate_button next disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#" class="pageNumber">Tiếp</a></li>
        }
        else
        {
            <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#" class="pageNumber">Tiếp</a></li>
        }
    </ul>
</div>
<!-- /.panel-body -->
<!-- Modal sửa -->
<div class="modal fade" id="suaModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <form asp-controller="TaiKhoan" asp-action="EditTaiKhoan" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Tài khoản</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        <input type="text" class="form-control" id="item-sua-tendangnhap" name="item_sua_tendangnhap" readonly>
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input type="password" class="form-control" id="item-sua-matkhau" name="item_sua_matkhau">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" id="item-sua-email" name="item_sua_email">
                    </div>
                    <div class="form-group">
                        <label>Điện thoại</label>
                        <input type="text" class="form-control" id="item-sua-dienthoai" name="item_sua_dienthoai">
                    </div>
                    <div class="form-group">
                        <label>CMND</label>
                        <input type="text" class="form-control" id="item-sua-cmnd" name="item_sua_cmnd">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-warning">Sửa</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.ThongBao != null)
{
    <script>
            alert("@Html.Raw(ViewBag.ThongBao)");
    </script>
}

<script>
    $("#btnSuaTaiKhoan").click(function () {
        let tendangnhap = $(this).closest('tr').find('.item-tendangnhap').text();
        let email = $(this).closest('tr').find('.item-email').text();
        let dienthoai = $(this).closest('tr').find('.item-dienthoai').text();
        let cmnd = $(this).closest('tr').find('.item-cmnd').text();

        $("#item-sua-tendangnhap").val(tendangnhap.trim());
        $("#item-sua-email").val(email.trim());
        $("#item-sua-dienthoai").val(dienthoai.trim());
        $("#item-sua-cmnd").val(cmnd.trim());
    });

    $("#sortList").change(function () {
        let sortorder = $("#sortList option:selected").val();
        $.ajax({
            url: "@Url.Action("Sort", "TaiKhoan", new { area = "Webmaster" })",
            type: "get",
            data: { "sortorder": sortorder },
            success: function (data) {
                $(".body-content").html(data);
            },
            error: function (data) {
                alert("Error: " + data);
            }
        });
    });

    $("#searchList").keyup(function () {
        let search = $(this).val();
        $.ajax({
            url: "@Url.Action("Search", "TaiKhoan", new { area = "Webmaster" })",
            type: "get",
            data: { "search": search },
            success: function (data) {
                $(".body-content").html(data);
            },
            error: function (data) {
                alert("Error: " + data);
            }
        });
    });

